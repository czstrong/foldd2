<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

    <div class="field form-group">
    <%= f.label :first, 'First Name' %>
    <%= f.text_field :first, autofocus: true, :class => "form-control" %>
  </div>

    <div class="field form-group">
    <%= f.label :last, 'Last Name' %>
    <%= f.text_field :last, autofocus: true, :class => "form-control" %>
  </div>

  <div class="field form-group" >
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, :class => "form-control" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field form-group" >
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "off", :class => "form-control" %>
  </div>

  <div class="field form-group" >
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control" %>
  </div>

  <div class="field form-group" >
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "off", :class => "form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label :phone, 'Phone Number' %>
    <%= f.telephone_field :phone, autofocus: true, :class => "form-control", :limit => 10 %>
  </div>

  <div class="field form-group">
    <%= f.label :dorm, 'Dorm Name' %>
    <%= f.text_field :dorm, autofocus: true, :class => "form-control" %>
  </div>

    <div class="field form-group">
    <%= f.label :address1, 'Address 1' %>
    <%= f.text_field :address1, autofocus: true, :class => "form-control" %>
  </div>

    <div class="field form-group">
    <%= f.label :address2, 'Address 2' %>
    <%= f.text_field :address2, autofocus: true, :class => "form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label :zip, 'Zip Code' %>
    <%= f.number_field :zip, autofocus: true, :class => "form-control" %>
  </div>

   <div class="form-group">
            <label for="user_pud" class="col-sm-2 control-label">
              Pick Up Date
            </label>
            <div class="col-sm-10">
            <%= f.select :pud, ["Sunday", "Monday", "Tuesday"], {}, :class => "form-control" %>
            </div>
          </div>

          <!-- Label and input for put -->
                <div class="form-group">
            <label for="user_put" class="col-sm-2 control-label">
              Pick Up Time
            </label>
            <div class="col-sm-10">
            <%= f.select :put, ["10:00 AM", "11:00 AM", "12:00 PM", "1:00 PM", "2:00 PM", "3:00 PM", "4:00 PM"], {}, :class => "form-control" %>
            </div>
          </div>

          <!-- Label and input for dod -->
          <div class="form-group">
            <label for="user_dod" class="col-sm-2 control-label">
              Drop Off Date
            </label>
            <div class="col-sm-10">
            <%= f.select :dod, ["Monday", "Tuesday", "Wednesday"], {}, :class => "form-control" %>
            </div>
          </div>

          <!-- Label and input for dot -->
          <div class="form-group">
            <label for="user_dot" class="col-sm-2 control-label">
              Drop Off Time
            </label>
            <div class="col-sm-10">
            <%= f.select :dot, ["10:00 AM", "11:00 AM", "12:00 PM", "1:00 PM", "2:00 PM", "3:00 PM", "4:00 PM"], {}, :class => "form-control" %>
            </div>
          </div>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
