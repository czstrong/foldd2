<!-- Validation failure messages -->

<% if @record.errors.any? %>
  <% @record.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Add Record</h3>
      </div>
      <div class="panel-body">
        <form action="/create_record" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for user_id -->
          <div class="form-group">
            <label for="user_id" class="col-sm-2 control-label">
              User ID
            </label>
            <div class="col-sm-10">
              <input type="text" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= @record.user_id %>">
            </div>
          </div>



          <!-- Label and input for pud -->
          <div class="form-group" >
            <label for="pud" class="col-sm-2 control-label">
              Pick Up Date
            </label>
            <div class="col-sm-9 input-group date" id='datetimepicker1'>
              <input type="text" id="pud" name="pud" placeholder="Pud" class="form-control" >
              <span class="input-group-addon">
                  <span class="glyphicon glyphicon-calendar"></span>
                </span>
            </div>
          </div>

          <!-- Label and input for put -->
          <div class="form-group">
            <label for="put" class="col-sm-2 control-label">
              Pick Up Time
            </label>
            <div class="col-sm-10 input-group date" id='datetimepicker3'>
              <input type="text" id="put" name="put" placeholder="Put" class="form-control" value="<%= @record.put %>">
              <span class="input-group-addon">
                  <span class="glyphicon glyphicon-time"></span>
                </span>
            </div>
          </div>

          <!-- Label and input for dod -->
          <div class="form-group">
            <label for="dod" class="col-sm-2 control-label">
              Drop Off Date
            </label>
            <div class="col-sm-10 input-group date" id='datetimepicker2'>
              <input type="text" id="dod" name="dod" placeholder="Dod" class="form-control" value="<%= @record.dod %>">
                    <span class="input-group-addon">
                   <span class="glyphicon glyphicon-calendar"></span>
                  </span>
            </div>
          </div>

          <!-- Label and input for dot -->
          <div class="form-group">
            <label for="dot" class="col-sm-2 control-label">
              Drop Off Time
            </label>
            <div class="col-sm-10 input-group date" id='datetimepicker4'>
              <input type="text" id="dot" name="dot" placeholder="Dot" class="form-control" value="<%= @record.dot %>">
              <span class="input-group-addon">
                  <span class="glyphicon glyphicon-time"></span>
                </span>
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-success">
                Create Record
              </button>
              or
              <a href="/records">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

